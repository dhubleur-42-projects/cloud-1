*.${DOMAIN_NAME} {
	tls {
		dns cloudflare ${CLOUDFLARE_API_TOKEN}
	}
}

wordpress.${DOMAIN_NAME} {
	reverse_proxy * wordpress:80 {
		header_up X-Forwarded-Port 443
        header_up X-Forwarded-Proto https
	}
}

phpmyadmin.${DOMAIN_NAME} {
	reverse_proxy * phpmyadmin:80 {
		header_up X-Forwarded-Port 443
		header_up X-Forwarded-Proto https
	}
}